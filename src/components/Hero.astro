---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;
---
<style>
:root { --fade-duration: 900ms; --fade-easing: cubic-bezier(.2,.9,.3,1); }
.fade-up {
  opacity: 0;
  transform: translateY(25px);
  animation: fadeUp var(--fade-duration) var(--fade-easing) forwards;
}
.fade-up.delay-1 { animation-delay: 400ms; }
.fade-up.delay-2 { animation-delay: 600ms; }
.fade-up.duration-1 { animation-duration: 1200ms; }
.fade-up.duration-2 { animation-duration: 1600ms; }

@keyframes fadeUp {
  from { opacity: 0; transform: translateY(25px); }
  to   { opacity: 1; transform: translateY(0); }
}

@media (prefers-reduced-motion: reduce) {
  .fade-up { animation: none; opacity: 1; transform: none; }
}
</style>

<section class="py-24 md:py-32" id="hero">
  <h1
    class="fade-up duration-1 delay-1 mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-9xl"
  >
    {name}
  </h1>
  <p
      id="hero-specialty"
      class="fade-up duration-2 delay-2 mb-9 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl"
  >
    {specialty}
  </p>
  <p class="fade-up duration-2 delay-2 mb-16 text-base font-normal text-neutral md:text-lg">
    {summary}
  </p>

  
</section>
