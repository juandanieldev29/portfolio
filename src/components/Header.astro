---
import Menu from "@icons/Menu.astro";
import { Image } from "astro:assets";
import type { HeaderProps } from "@types";

type Props = HeaderProps;

const { siteLogo, navLinks } = Astro.props;
---

<header
  id="site-header"
  class="sticky top-0 z-50 mx-auto flex max-w-5xl animate-slide-in justify-between bg-black px-5 py-6 transition-colors duration-300"
>
  <div class="header-inner w-full flex items-center justify-between">
  <a href="/" aria-label="Home link">
    <Image
      class="rounded-full"
      src={siteLogo}
      width="45"
      height="45"
      alt="website logo"
    />
  </a>

  <button
    type="button"
    id="menu-button"
    class="px-1.5 text-neutral sm:hidden"
    aria-expanded="false"
    aria-controls="main-menu"
  >
    <Menu />
  </button>

  <nav
    class="absolute top-20 right-5 hidden rounded-xl border border-neutral/40 bg-black px-4 py-5 text-neutral sm:static sm:block sm:border-0 sm:bg-transparent sm:p-0"
    id="main-menu"
  >
    <ul class="gap-2 sm:flex">
      {
        navLinks.map((link) => (
          <li class="relative">
            <a
              class={`nav-item relative block p-2 text-sm font-medium transition-all duration-500 after:absolute after:bottom-0 after:left-2/4 after:h-2 after:w-1 after:-translate-x-2/4 after:text-primary after:opacity-0 after:content-['â€¢'] hover:text-white`}
              href={link.href}
            >
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  </div>
</header>

<script>
  // Toggle mobile menu
  const button = document.querySelector("#menu-button");
  const menu = document.querySelector("#main-menu");
  const navItems = document.querySelectorAll("#main-menu > ul > li > a");

  const toggleMenu = () => {
    menu?.classList.toggle("hidden");
    const isHidden = menu?.classList.contains("hidden");
    button?.setAttribute("aria-expanded", `${!isHidden}`);
  };

  button?.addEventListener("click", toggleMenu);
  navItems.forEach((item) => {
    item?.addEventListener("click", toggleMenu);
  });

  // Update navigation based on scroll position with Intersection Observer
  // Use a centered rootMargin so very tall sections (longer than viewport)
  // still become "active" when their central area is in view.
  const sectionObserverOptions = {
    root: null,
    // center the observation area vertically in the viewport
    rootMargin: '-45% 0px -45% 0px',
    threshold: 0,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      // Only consider sections that have an id (so nav links can match)
      if (!entry.target.id) return;

      if (entry.isIntersecting) {
        navItems.forEach((item) => {
          // match nav href like "#section-id"
          if (item.getAttribute('href') === `#${entry.target.id}`) {
            item.classList.add('text-white', 'md:after:opacity-100');
          } else {
            item.classList.remove('text-white', 'md:after:opacity-100');
          }
        });
      }
    });
  }, sectionObserverOptions);

  // Observe only sections with an id to avoid observing unrelated sections
  document.querySelectorAll('section[id]').forEach((section) => {
    observer.observe(section);
  });

  // Add glassmorphism to header after the hero specialty scrolls out
  const headerEl = document.querySelector('#site-header');
  const heroSpecialty = document.querySelector('#hero-specialty');
  let heroObserver;

  if (heroSpecialty && headerEl) {
    heroObserver = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          headerEl.classList.remove('glass');
        } else {
          headerEl.classList.add('glass');
        }
      });
    }, { threshold: 0 });

    heroObserver.observe(heroSpecialty);
  }

  // Cleanup observer
  document.onvisibilitychange = () => {
    if (document.visibilityState === "hidden") {
      observer.disconnect();
      if (heroObserver) heroObserver.disconnect();
    } else {
      document.querySelectorAll("section").forEach((section) => {
        observer.observe(section);
      });
      if (heroSpecialty && heroObserver) heroObserver.observe(heroSpecialty);
    }
  };
</script>

<style>
  header {
    animation-timeline: scroll();
    animation-range: 0 650px;
  }

  /* Glassmorphism style applied when the hero is scrolled out.
     Use pseudo-elements so the glass background spans the full viewport
     while keeping the header content centered with margins. */
  header {
    /* keep sticky positioning from Tailwind instead of overriding it */
    position: sticky;
    top: 0;
  }

  .header-inner {
    position: relative;
    z-index: 10; /* keep content above the glass background */
    width: 100%;
  }

  header.glass {
    background-color: transparent; /* use pseudo elements for visual effect */
  }

  header.glass::before {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 0;
    width: 100vw;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.04);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    pointer-events: none;
    z-index: 0;
  }

  header.glass::after {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 0;
    width: 100vw;
    height: 100%;
    border: 1px solid rgba(255, 255, 255, 0.06);
    box-shadow: 0 8px 32px rgba(2, 6, 23, 0.6);
    pointer-events: none;
    z-index: 0;
  }
</style>
